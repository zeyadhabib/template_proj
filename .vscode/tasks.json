{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure and Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "debug"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            }
        },
        {
            "label": "CMake: Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j",
                "6"
            ],
            "dependsOn": [
                "CMake: Configure and Build (Debug)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CMake: Run Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "hello_test"
            ],
            "dependsOn": [
                "CMake: Configure and Build (Debug)"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            }
        }
    ]
}
